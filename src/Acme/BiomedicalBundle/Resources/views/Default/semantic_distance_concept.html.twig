{% extends 'AcmeBiomedicalBundle::main.html.twig' %} 
{% block javascripts %}
{{ parent() }}
<script>
$(function() {
    $( "#slider-range-max" ).slider({
      range: "max",
      min: 0,
      max: 100,
      value: 50,
      slide: function( event, ui ) {
        $( "#distance_max" ).val( ui.value );
      }
    });
    $( "#distance_max" ).val( $( "#slider-range-max" ).slider( "value" ) );
  });
</script>
{% endblock %}
{% block content %}
{{ parent() }}
<form action="/search_semantic_distance" method="post">
	<fieldset>
		<legend>Trouver tous les concepts</legend>
		<input type="text" id="concept_1" name="concept_1"
			value="Entrer un concept, ex Melanoma" /> 
		<label for="dist_id">Distance s√©mantique:</label>	
		<select name="dist_id" id="dist_id">
			<option value="sim_lin">Lin</option>
			<option value="sim_wu_palmer">Wu/Palmer</option>
			<option value="sim_resnik">Resnik</option>
			<option value="sim_schlicker">Schlicker</option>
		</select>
		<label for="distance_max">Distance maximale:</label>
		<input type="number" id="distance_max" style="border:0; color:#f6931f; font-weight:bold;"/>
		<div id="slider-range-max" style="width:300px;float: right;margin-right: 45%"></div>
		<br>
		<input class="home_button" type="submit" value="Chercher"/>	
	</fieldset>
</form>
{% endblock %}